<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>ppay</artifactId>
		<groupId>com.ppay</groupId>
		<version>2.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>icpay-mer2</artifactId>
	<packaging>war</packaging>
	<description>商户服务网站</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.encoding>UTF-8</maven.compiler.encoding>
		<version.com.icpay.utils>1.0.0</version.com.icpay.utils>
		<ver.urlrewritefilter>4.0.4</ver.urlrewritefilter>
	</properties>
	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<!-- 排除布署 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native2ascii-maven-plugin</artifactId>
			</plugin>
			<!-- jetty插件配置 -->
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.26</version>
                <configuration>
                    <scanIntervalSeconds>5</scanIntervalSeconds>
                    <webDefaultXml>src/main/resources/webdefault.xml</webDefaultXml>
                    <webAppSourceDirectory>target/icpay-mer2</webAppSourceDirectory>
                    <scanIntervalSeconds>3</scanIntervalSeconds>
                    <contextPath>/icpay-mer2</contextPath>
                    <connectors>
                        <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                            <port>9002</port>
                        </connector>
                    </connectors>
                </configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<warSourceDirectory>${basedir}/src/main/webapp</warSourceDirectory>
					<!-- 扫描指定资源目录下的${xxx}变量，并依据profile过滤，过滤后会输出到 webapp 路径-->
					<webResources>
						<resource>
							<directory>src/main/webapp/WEB-INF</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
						<resource>
							<directory>src/main/webapp/freemarker</directory>
							<targetPath>freemarker</targetPath>
							<filtering>true</filtering>
							<includes>
								<include>**/*.*</include>
							</includes>
						</resource>
						<!-- <resource>
							<directory>src/main/webapp/resources</directory>
							<targetPath>resources</targetPath>
							<filtering>true</filtering>
							<includes>
								<include>**/*.css</include>
								<include>**/*.js</include>
							</includes>
						</resource> -->
					</webResources>
				</configuration>
			</plugin>
		</plugins>

		<!-- 扫描指定资源目录下的${xxx}变量，并依据profile过滤，过滤后会输出到 classes 路径-->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
		</resources>
	</build>

